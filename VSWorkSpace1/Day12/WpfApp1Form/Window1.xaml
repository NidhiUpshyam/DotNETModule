<Window x:Class="WpfApp1Form.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1Form"
        mc:Ignorable="d"
        Title="Window1" Height="522" Width="858.5">
    <Grid>
        <Label x:Name="lblFname" Content="First Name : " HorizontalAlignment="Left" Margin="132,76,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label x:Name="lblLname" Content="Last Name : " HorizontalAlignment="Left" Margin="132,172,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Label x:Name="lblFullName" Content="Full Name : " HorizontalAlignment="Left" Margin="132,284,0,0" VerticalAlignment="Top" FontSize="36"/>
        <TextBox x:Name="txtFname" HorizontalAlignment="Left" Height="58" Margin="431,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="36" TextChanged="txtFname_TextChanged"/>
        <TextBox x:Name="txtLname" HorizontalAlignment="Left" Height="58" Margin="431,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="36" TextChanged="txtLname_TextChanged"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Left" Height="46" Margin="431,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="36"/>

    </Grid>
</Window>
