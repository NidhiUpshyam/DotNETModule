@model IEnumerable<Day16CRUDhw.Models.Employees>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees Lists</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).EmpNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).EmpName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).Basic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementAt(0).DeptNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Basic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeptNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.EmpNo }) |
            @Html.ActionLink("Details", "Details", new {  id=item.EmpNo }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.EmpNo })
        </td>
    </tr>
}

</table>
